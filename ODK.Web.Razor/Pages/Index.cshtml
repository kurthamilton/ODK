@page "/"
@using ODK.Core.Platforms
@using ODK.Services.Chapters
@model IndexModel
@inject IChapterService ChapterService
@{
    Layout = "_HomeLayout";
    Model.Path = "/";
}

@if (Model.Platform == PlatformType.DrunkenKnitwits)
{
    var viewModel = await ChapterService.GetOdkHomePageViewModel();
    @await Html.PartialAsync("Home/_OdkHomeContent", viewModel)
}
else
{
    @await Html.PartialAsync("Home/_HomeContent")
}