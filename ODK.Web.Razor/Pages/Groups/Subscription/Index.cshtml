@page "/groups/{slug}/subscription"
@using ODK.Services.Chapters
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Models.Groups
@using ODK.Web.Razor.Models.Payments
@model IndexModel
@inject IChapterViewModelService ChapterViewModelService
@{
    Layout = "_HomeLayout";

    var chapter = await Model.GetChapter();
    var viewModel = await ChapterViewModelService.GetGroupSubscriptionPage(
        Model.MemberServiceRequest, chapter);

    Model.Title = $"Subscription | Profile | {viewModel.Chapter.GetDisplayName(Model.Platform)}";
}

@await Html.PartialAsync("Groups/_GroupBody", new GroupBodyViewModel
{
    Title = "",
    Content = await Html.PartialAsync("Groups/Subscription/_GroupSubscriptionContent", viewModel),
    Group = viewModel
})