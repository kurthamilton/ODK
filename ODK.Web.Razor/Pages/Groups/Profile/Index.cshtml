@page "/groups/{slug}/profile"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Services.Chapters
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Models.Groups
@model ProfileModel
@inject IChapterViewModelService ChapterViewModelService
@{
    Layout = "_HomeLayout";

    var chapter = Model.Chapter;
    var viewModel = await ChapterViewModelService.GetGroupProfilePage(
        Model.ServiceRequest, Model.CurrentMember, chapter);

    Model.Title = $"Profile | {viewModel.Chapter.GetDisplayName(Model.Platform)}";
}

@await Html.PartialAsync("Groups/_GroupBody", new GroupBodyViewModel
{
    Title = "",
    Content = await Html.PartialAsync("Groups/_GroupProfileContent", viewModel),
    Group = viewModel
})