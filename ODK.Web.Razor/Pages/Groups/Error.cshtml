@page "/groups/{slug}/error/{statusCode:int}"
@using ODK.Core.Platforms
@using ODK.Services.Chapters
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Common.Extensions
@using ODK.Web.Razor.Models.Groups
@model ErrorModel
@inject IChapterViewModelService ChapterViewModelService
@{
    Layout = "_HomeLayout";
    Model.Title = "Error";

    var chapter = Model.Chapter;
    var viewModel = await ChapterViewModelService.GetGroupPage(
        Model.ServiceRequest, Model.CurrentMemberOrDefault, chapter);
}

@await Html.PartialAsync("Groups/_GroupBody", new GroupBodyViewModel
{
    Title = "Error",
    Content = await Html.PartialAsync("Errors/_ErrorPage", Model.ErrorStatusCode),
    Group = viewModel
})