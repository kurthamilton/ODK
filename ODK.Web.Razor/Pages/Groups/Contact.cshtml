@page "/groups/{slug}/contact"
@using ODK.Core.Exceptions
@using ODK.Core.Pages
@using ODK.Services.Chapters
@using ODK.Web.Razor.Models.Groups
@model ContactModel
@inject IChapterViewModelService ChapterViewModelService
@{
    Layout = "_HomeLayout";

    var viewModel = await ChapterViewModelService.GetGroupContactPage(Model.ChapterServiceRequest);

    var chapterPage = viewModel.ChapterPages.FirstOrDefault(x => x.PageType == PageType.Contact);
    if (chapterPage?.Hidden == true)
    {
        throw new OdkNotFoundException();
    }

    var title = chapterPage?.Title ?? "Contact";
    Model.Title = $"{title} | {viewModel.Chapter.GetDisplayName(Model.Platform)}";
}

@await Html.PartialAsync("Groups/_GroupBody", new GroupBodyViewModel
{
    Title = "",
    Content = await Html.PartialAsync("Groups/_GroupContactContent", viewModel),
    Group = viewModel
})

@section scripts
{
    @await Html.PartialAsync("Components/Scripts/_Recaptcha")
}