@page "/groups/{slug}/members/{id:guid}"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Core.Exceptions
@using ODK.Core.Pages
@using ODK.Services.Members
@using ODK.Web.Common.Components
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Groups
@inject IMemberViewModelService MemberViewModelService
@model MemberModel
@{
    Layout = "_HomeLayout";

    var viewModel = await MemberViewModelService.GetMemberPage(Model.MemberChapterServiceRequest, Model.MemberId);
    if (!viewModel.IsMember)
    {
        Response.Redirect(Model.OdkRoutes.Groups.Join(Model.Chapter));
    }

    var chapterPage = viewModel.ChapterPages.FirstOrDefault(x => x.PageType == PageType.Members);
    if (chapterPage?.Hidden == true)
    {
        throw new OdkNotFoundException();
    }

    Model.Title = viewModel.Member.GetDisplayName(viewModel.Chapter.Id);
}

@await Html.PartialAsync("Groups/_GroupBody", new GroupBodyViewModel
{
    Title = "",
    Content = await Html.PartialAsync("Members/_MemberContent", viewModel),
    Group = viewModel,
    Breadcrumbs = new[]
    {
        new MenuItem { Link = Model.OdkRoutes.Groups.Members(Model.Chapter), Text = chapterPage?.Title ?? "Members" },
        new MenuItem { Text = viewModel.Member.GetDisplayName(viewModel.Chapter.Id) }
    }
})