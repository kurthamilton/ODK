@page "/groups/{slug}/members"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Core.Exceptions
@using ODK.Core.Pages
@using ODK.Core.Utils
@using ODK.Services.Members
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Groups
@model IndexModel
@inject IMemberViewModelService MemberViewModelService
@{
    Layout = "_HomeLayout";

    var chapter = await Model.GetChapter();
    var viewModel = await MemberViewModelService.GetMembersPage(Model.MemberServiceRequest, chapter);

    if (!viewModel.IsMember)
    {
        Response.Redirect(OdkRoutes.Groups.Join(viewModel.Platform, viewModel.Chapter));
    }

    var chapterPage = viewModel.ChapterPages.FirstOrDefault(x => x.PageType == PageType.Members);
    if (chapterPage?.Hidden == true)
    {
        throw new OdkNotFoundException();
    }

    var title = StringUtils.Coalesce(chapterPage?.Title, "Members");
    Model.Title = $"{title} | {viewModel.Chapter.GetDisplayName(Model.Platform)}";
}

@await Html.PartialAsync("Groups/_GroupBody", new GroupBodyViewModel
{
    Title = title,
    Content = await Html.PartialAsync("Members/_MembersContent", viewModel),
    Group = viewModel
})