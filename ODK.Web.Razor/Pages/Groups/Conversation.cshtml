@page "/groups/{slug}/conversations/{id:guid}"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Services.Chapters
@using ODK.Web.Razor.Models.Groups
@model ConversationModel
@inject IChapterViewModelService ChapterViewModelService
@{
    Layout = "_HomeLayout";

    var chapter = Model.Chapter;
    var viewModel = await ChapterViewModelService.GetGroupConversationPage(
        Model.ServiceRequest, Model.CurrentMember, chapter, Model.ConversationId);

    Model.Title = $"{viewModel.Conversation.Subject} | Conversations | {viewModel.Chapter.GetDisplayName(Model.Platform)}";
}

@await Html.PartialAsync("Groups/_GroupBody", new GroupBodyViewModel
{
    Title = "",
    Content = await Html.PartialAsync("Groups/_GroupConversationContent", viewModel),
    Group = viewModel
})