@page "/groups/{slug}/events"
@using ODK.Services.Chapters
@using ODK.Web.Razor.Models.Groups
@model IndexModel
@inject IChapterViewModelService ChapterViewModelService
@{
    Layout = "_HomeLayout";

    var viewModel = await ChapterViewModelService.GetGroupEventsPage(
        Model.ServiceRequest, Model.CurrentMemberIdOrDefault, Model.Chapter);

    Model.Title = $"Events | {viewModel.Chapter.GetDisplayName(Model.Platform)}";
}

@await Html.PartialAsync("Groups/_GroupBody", new GroupBodyViewModel
{
    Title = "Events",
    Content = await Html.PartialAsync("Groups/_GroupEventsContent", viewModel),
    Group = viewModel
})