@page "/siteadmin/errors/{id:guid}"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.SiteAdmin
@model ErrorModel
@{
    Layout = "_SiteAdminLayout";
    Model.Title = "Error | SiteAdmin";
}

@await Html.PartialAsync("Components/_Breadcrumbs", new BreadcrumbsViewModel
{
    Breadcrumbs = new []
    {
        new MenuItem { Link = OdkRoutes.SiteAdmin.Errors, Text = "Error log" },
        new MenuItem { Text = "Error" }
    }
})

@await Html.PartialAsync("SiteAdmin/_ErrorContent", new ErrorContentViewModel(Model.Error))