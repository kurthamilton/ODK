@page "/SuperAdmin/EmailProviders/{id:guid}"
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@model EmailProviderModel
@{
    Layout = "_SiteAdminLayout";
    Model.Title = "Edit email provider | SuperAdmin";
}

@await Html.PartialAsync("Components/_Breadcrumbs", new BreadcrumbsViewModel
{
    Breadcrumbs = new []
    {
        new MenuItem { Link = "/SuperAdmin/Emails", Text = "Emails" },
        new MenuItem { Text = Model.Provider?.SmtpServer ?? "SMTP" }
    }
})

@await Html.PartialAsync("SuperAdmin/_EmailProviderContent", Model.Provider)