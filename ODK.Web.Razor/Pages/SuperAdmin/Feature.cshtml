@page "/superadmin/features/{id:guid}"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Models.SuperAdmin
@model FeatureModel
@{
    Layout = "_SiteAdminLayout";
    Model.Title = "Feature | SuperAdmin";
}

@await Html.PartialAsync("Components/_Breadcrumbs", new BreadcrumbsViewModel
{
    Breadcrumbs = new[]
    {
        new MenuItem { Link = "/superadmin/features", Text = "Features" },
        new MenuItem { Text = Model.Feature.Name }
    }
})

@await Html.PartialAsync("SuperAdmin/_FeatureContent", new FeatureContentViewModel(Model.Feature))