@page "/SuperAdmin/Features/{id:guid}"
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Models.SuperAdmin
@model FeatureModel
@{
    Layout = "SuperAdmin/_SuperAdminLayout";
    Model.Title = "Feature | SuperAdmin";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Breadcrumbs = new[]
    {
        new MenuItem { Link = "/SuperAdmin/Features", Text = "Features" },
        new MenuItem { Text = Model.Feature.Name }
    },
    Content = await Html.PartialAsync("SuperAdmin/_FeatureContent", new FeatureContentViewModel(Model.Feature))
})