@page "/superadmin/icons"
@using Microsoft.AspNetCore.Authorization
@using ODK.Web.Razor.Models.Components
@attribute [Authorize]
@model IconsModel
@{
    Layout = "_SiteAdminLayout";
    Model.Title = "Icons";

    var iconTypes = Enum.GetValues<IconType>()
        .Where(x => x != IconType.None)
        .OrderBy(x => x.ToString())
        .ToArray();
}

<h2>Icons</h2>

<div class="container-fluid">
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6">
        @foreach (var type in iconTypes)
        {
            <div class="col card m-2">
                <div class="d-flex justify-content-center m-2">
                    @await Html.PartialAsync("Components/_Icon", new IconViewModel(type))
                </div>
                <div class="d-flex justify-content-center small m-2 mt-0">
                    @type.ToString()                    
                </div>
            </div>
        }
    </div>    
</div>