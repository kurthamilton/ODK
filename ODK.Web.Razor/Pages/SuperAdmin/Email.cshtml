@page "/superadmin/emails/{type}"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.SuperAdmin
@model EmailModel
@{
    Layout = "_SiteAdminLayout";
    Model.Title = "Edit email | SuperAdmin";
}

@await Html.PartialAsync("Components/_Breadcrumbs", new BreadcrumbsViewModel
{
    Breadcrumbs = new[]
    {
        new MenuItem { Link = "/SuperAdmin/Emails", Text = "Emails" },
        new MenuItem { Text = Model.Email.Type.ToString() }
    }
})

<section class="section">
    @await Html.PartialAsync("SuperAdmin/_EmailContent", new EmailContentViewModel(Model.Email))
</section>