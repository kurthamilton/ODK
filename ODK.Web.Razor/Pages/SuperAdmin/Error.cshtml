@page "/superadmin/errors/{id:guid}"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.SuperAdmin
@model ErrorModel
@{
    Layout = "_SiteAdminLayout";
    Model.Title = "Error | SuperAdmin";
}

@await Html.PartialAsync("Components/_Breadcrumbs", new BreadcrumbsViewModel
{
    Breadcrumbs = new []
    {
        new MenuItem { Link = "/superadmin/errors", Text = "Error log" },
        new MenuItem { Text = "Error" }
    }
})

@await Html.PartialAsync("SuperAdmin/_ErrorContent", new ErrorContentViewModel(Model.Error))