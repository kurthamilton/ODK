@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Services
@inject IRequestStore RequestStore
@{
    Layout = "_HomeLayout";

    var menuItems = new[]
    {
        new MenuItem { Link = "/siteadmin/emails", Text = "Emails" },
        new MenuItem { Link = "/siteadmin/errors", Text = "Error log" },
        new MenuItem { Link = "/siteadmin/features", Text = "Features" },
        new MenuItem { Link = "/siteadmin/groups", Text = "Groups" },
        new MenuItem { Link = "/siteadmin/issues", Text = "Issues" },
        new MenuItem { Link = "/siteadmin/messages", Text = "Messages" },
        new MenuItem { Link = "/siteadmin/payments", Text = "Payments" },
        new MenuItem { Link = "/siteadmin/subscriptions", Text = "Subscriptions" },
        new MenuItem { Link = "/siteadmin/topics", Text = "Topics" }
    };
}

@section styles
{
    @await RenderSectionAsync("styles", required: false)
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "Site admin",
    Content = await Html.PartialAsync("Components/_TwoColLeftMenu", new TwoColLeftMenuViewModel
    {
        BodyContentFunc = _ => RenderBody(),
        MenuContentFunc = _ => Html.PartialAsync("Components/_SideMenu", new SideMenuViewModel
        {
            MenuItems = menuItems,
            Root = true
        })
    })
})

@section scripts
{
    <script src="/js/odk.admin.js" asp-append-version="true"></script>
    <script src="~/js/odk.lists.js" asp-append-version="true"></script>

    @await RenderSectionAsync("scripts", required: false)
}
