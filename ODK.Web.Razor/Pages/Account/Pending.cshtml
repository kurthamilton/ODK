@page "/account/pending"
@using ODK.Web.Razor.Models.Components
@model PendingModel
@{
    Layout = "_AccountLayout";
    Model.Title = "Join";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "Create account",
    WidthClass = "col-12 col-lg-8 col-xl-6",
    Breadcrumbs = new []
    {
        new MenuItem { Link = $"/", Text = "Home" },
        new MenuItem { Text = "Create account" }
    },
    ContentFunc = 
        @<div>
            <div class="alert alert-success">
                Thank you for signing up. An email has been sent to your email address containing a link to activate your account.
            </div>
        </div>
})