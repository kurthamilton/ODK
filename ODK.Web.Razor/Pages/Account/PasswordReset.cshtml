@page "/account/password/reset"
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Account
@using ODK.Web.Razor.Models.Components
@model PasswordResetModel
@{
    Layout = "_HomeLayout";
    Model.Title = "Reset password";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "Reset password",
    Breadcrumbs = new[]
    {
        new MenuItem { Link = "/account/login", Text = "Login" },
        new MenuItem { Text = "Password reset" }
    },
    Content = await Html.PartialAsync("Account/_ResetPasswordForm", new ResetPasswordFormViewModel
    {
        Token = Model.Token
    })
})