@page "/{chapterName}/About"
@using ODK.Core
@using ODK.Core.Exceptions
@using ODK.Core.Pages
@using ODK.Core.Utils
@using ODK.Services.Chapters
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.About
@model ODK.Web.Razor.Pages.Chapters.AboutModel
@inject IChapterViewModelService ChapterViewModelService
@{
    Layout = "_OdkChapterLayout";    
    Model.Description = "More information about this Drunken Knitwits chapter, including some frequently asked questions";

    var viewModel = await ChapterViewModelService.GetChapterAboutPage(Model.Chapter.Id);    
    if (viewModel.ChapterPage?.Hidden == true)
    {
        throw new OdkNotFoundException();
    }

    var title = StringUtils.Coalesce(viewModel.ChapterPage?.Title, "About");

    Model.Title = title;
    Model.Path = OdkRoutes.Groups.About(Model.Platform, Model.Chapter);
}

@if (!Model.Chapter.IsOpenForRegistration())
{
    @await Html.PartialAsync("Components/_Body", new BodyViewModel
    {
        Title = Model.Chapter.FullName,
        Content = await Html.PartialAsync("Groups/_GroupRegistrationClosed", Model.Chapter)
    })

    return;
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = title,
    Breadcrumbs = new []
    {
        new MenuItem 
        { 
            Link = OdkRoutes.Groups.Group(Model.Platform, Model.Chapter), 
            Text = Model.Chapter.GetDisplayName(Model.Platform)
        },
        new MenuItem { Text = title }
    },
    Content = await Html.PartialAsync("Chapters/_AboutContent", new AboutContentViewModel
    {
        Chapter = Model.Chapter,
        Texts = viewModel.Texts
    })
})