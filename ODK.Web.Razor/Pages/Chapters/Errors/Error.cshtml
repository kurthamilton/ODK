@page "/{chapterName}/Error/{statusCode}"
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Common.Extensions
@model ErrorModel
@{
    Layout = "_OdkChapterLayout";
    Model.Title = "Error";

    var chapter = await Model.GetChapter();
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Breadcrumbs = new []
    {
        new MenuItem 
        { 
            Link = OdkRoutes.Groups.Group(Model.Platform, chapter), 
            Text = chapter.GetDisplayName(Model.Platform)
        },
        new MenuItem { Text = Model.ErrorStatusCode.ErrorPageTitle() }
    },
    Content = await Html.PartialAsync("Errors/_ErrorPage", Model.ErrorStatusCode),
    Title = Model.ErrorStatusCode.ErrorPageTitle()
})