@page "/{chapterName}/Members"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Core.Exceptions
@using ODK.Core.Pages
@using ODK.Core.Utils
@using ODK.Services.Members
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@inject IMemberViewModelService MemberViewModelService
@model MembersModel
@{
    Layout = "_OdkChapterLayout";

    var viewModel = await MemberViewModelService.GetMembersPage(Model.MemberChapterServiceRequest);
    if (!viewModel.IsMember)
    {
        Response.Redirect(Model.OdkRoutes.Groups.Join(Model.Chapter));
    }

    var chapterPage = viewModel.ChapterPages.FirstOrDefault(x => x.PageType == PageType.Members);
    if (chapterPage?.Hidden == true)
    {
        throw new OdkNotFoundException();
    }
  
    var title = StringUtils.Coalesce(chapterPage?.Title, "Knitwits");
    Model.Title = title;
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
   Title = $"{viewModel.Chapter.ShortName} {title}",
   Breadcrumbs = new []
   {
       new MenuItem 
       { 
           Link = Model.OdkRoutes.Groups.Group(Model.Chapter),
           Text = viewModel.Chapter.GetDisplayName(Model.Platform)
       },
       new MenuItem { Text = title }
   },
   Content = await Html.PartialAsync("Members/_MembersContent", viewModel)
})