@page "/{chapterName}/Account/Subscription"
@attribute [Authorize]
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Account
@using Microsoft.AspNetCore.Authorization
@model ODK.Web.Razor.Pages.Chapters.Account.SubscriptionModel
@{
    Layout = "_ChapterLayout";
    Model.Title = "Subscription";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "Account",
    HideSubscriptionAlert = true,    
    Content = await Html.PartialAsync("Account/_SiteAccountLayout", new SiteAccountLayoutViewModel
    {
        Active = OdkRoutes.Account.Subscription(Model.Chapter.Name),
        ChapterName = Model.Chapter.Name,
        Content = 
            @<div>
                @await Html.PartialAsync("Account/_SubscriptionContent", new SubscriptionContentViewModel(Model.Chapter))
            </div>
    })
})