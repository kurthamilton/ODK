@page "/{chapterName}/Account/Login"
@using ODK.Core
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Models.Login
@model ODK.Web.Razor.Pages.Chapters.Account.LoginModel
@{
    Layout = "_OdkChapterLayout";
    Model.Title = "Login";

    OdkAssertions.MeetsCondition(Model.Chapter, x => x.IsOpenForRegistration());
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
   Title = "Login",
   Content = await Html.PartialAsync("Account/_LoginForm", new LoginViewModel
   {
       Chapter = Model.Chapter,
       ReturnUrl = Model.ReturnUrl
   })
})