@page "/{chapterName}/Account"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Services.Users
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Account
@using ODK.Web.Razor.Models.Components
@model AccountModel
@inject IAccountViewModelService AccountViewModelService
@{
    Layout = "_ChapterLayout";
    Model.Title = "Profile";

    var viewModel = await AccountViewModelService.GetAccountPageViewModel(Model.MemberId, Model.ChapterName);
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "My profile",
    Breadcrumbs = new []
    {
        new MenuItem { Link = $"/{Model.ChapterName}", Text = Model.ChapterName },
        new MenuItem { Text = "Profile" }
    },
    Content = await Html.PartialAsync("Account/_AccountContent", viewModel)
})

@section styles
{
    <link rel="stylesheet" href="/lib/cropperjs/cropper.css" />
}

@section scripts
{
    <script src="/lib/cropperjs/cropper.js"></script>
    <script src="/js/odk.imaging.js"></script>
}