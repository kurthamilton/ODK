@page "/{chapterName}/Account/Join"
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Account
@model ODK.Web.Razor.Pages.Chapters.Account.JoinModel
@{
    Layout = "_ChapterLayout";
    Model.Title = "Join";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = $"Join the {Model.Chapter.Name} Drunken Knitwits",
    Breadcrumbs = new []
    {
        new MenuItem { Link = $"/{Model.Chapter.Name}", Text = Model.Chapter.Name },
        new MenuItem { Text = "Join" }
    },
    Content = await Html.PartialAsync("Account/_JoinContent", new JoinContentViewModel(Model.Chapter))
})

@section styles
{
    <link rel="stylesheet" href="/lib/cropperjs/cropper.css" />
}

@section scripts 
{
    <script src="/lib/cropperjs/cropper.js"></script>
    <script src="/js/odk.imaging.js"></script>
}