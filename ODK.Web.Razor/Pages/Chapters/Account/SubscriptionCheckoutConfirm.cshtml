@page "/{chapterName}/account/subscription/{id:guid}/confirm"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Core.Payments
@using ODK.Services.Members
@using ODK.Web.Common.Components
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Account
@using ODK.Web.Razor.Models.Components
@model SubscriptionCheckoutConfirmModel
@inject IMemberService MemberService
@{
    Layout = "_OdkChapterLayout";
    Model.Title = "Subscription pending confirmation";

    var subscriptionUrl = Model.RedirectUrl;
    var chapter = await Model.GetChapter();
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "Account",
    HideSubscriptionAlert = true,
    Content = await Html.PartialAsync("Components/_TwoColLeftMenu", new TwoColLeftMenuViewModel
    {
        Title = "Checkout",
        Breadcrumbs = new BreadcrumbsViewModel
        {
            Breadcrumbs = new[]
            {
                new MenuItem
                {
                    Icon = IconType.ArrowLeft,
                    Text = "My subscription",
                    Link = OdkRoutes.Account.Subscription(Model.Platform, chapter)
                }
            }
        },
        MenuContentFunc = _ => Html.PartialAsync("Account/_AccountMenu", new AccountMenuViewModel
        {
            Chapter = chapter
        }),
        BodyContentFunc = 
            @<div>
                <section class="section">
                    <div data-odk-checkout
                         data-odk-polling-url="/payments/sessions/@Model.SessionId/status?groupId=@chapter.Id">

                        <div data-odk-checkout-status="@PaymentStatusType.Complete"
                             data-odk-checkout-action="reload">
                        </div>

                        <div data-odk-checkout-status="@PaymentStatusType.Pending">
                            <div class="alert alert-warning">
                                We are just waiting for confirmation of your payment...
                            </div>                            
                        </div>                        

                        <div data-odk-checkout-status="@PaymentStatusType.Expired"
                             data-odk-checkout-action="reload">
                        </div>
                    </div>
                </section>
            </div>
    })
})

@section scripts 
{
    <script src="~/js/odk.polling.js" asp-append-version="true"></script>
    <script src="~/js/odk.checkout.js" asp-append-version="true"></script>
}