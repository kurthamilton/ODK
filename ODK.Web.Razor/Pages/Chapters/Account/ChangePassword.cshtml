@page "/{chapterName}/Account/Password/Change"
@attribute [Authorize]
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Account
@using Microsoft.AspNetCore.Authorization
@model ODK.Web.Razor.Pages.Chapters.Account.ChangePasswordModel
@{
    Layout = "_ChapterLayout";
    Model.Title = "Change password";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "Change password",
    Breadcrumbs = new[]
    {
        new MenuItem { Link = $"/{Model.Chapter.Name}", Text = Model.Chapter.Name },
        new MenuItem { Link = $"/{Model.Chapter.Name}/Account", Text = "Profile" },
        new MenuItem { Text = "Change password" }
    },
    Content = await Html.PartialAsync("Account/_ChangePasswordContent", 
        new ChangePasswordContentViewModel(Model.Chapter))
})