@page "/{chapterName}/Account/Activate"
@using ODK.Web.Razor.Models.Account
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Services
@model ActivateModel
@inject IRequestStore RequestStore
@{
    Layout = "_OdkChapterLayout";
    Model.Title = "Activate account";

    var chapter = await RequestStore.GetChapter();
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "Activate your account",
    Content = await Html.PartialAsync("Account/_ActivateContent", new ActivateFormViewModel
    {
        ChapterId = chapter.Id,
        Token = Model.Token
    })
})