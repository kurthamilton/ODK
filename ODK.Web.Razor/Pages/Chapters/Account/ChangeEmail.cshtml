@page "/{chapterName}/Account/Email/Change"
@attribute [Authorize]
@using ODK.Services.Users
@using ODK.Web.Common.Extensions
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Account
@using Microsoft.AspNetCore.Authorization
@model ODK.Web.Razor.Pages.Chapters.Account.ChangeEmailModel
@inject IAccountViewModelService AccountViewModelService
@{
    Layout = "_ChapterLayout";
    Model.Title = "Change email";

    var memberId = User.MemberId();
    var viewModel = await AccountViewModelService.GetChapterAccountViewModel(memberId, Model.ChapterName);
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "Update email address",
    Breadcrumbs = new[]
    {
        new MenuItem { Link = $"/{viewModel.ChapterName}", Text = viewModel.ChapterName },
        new MenuItem { Link = $"/{viewModel.ChapterName}/Account", Text = "Profile" },
        new MenuItem { Text = "Update email address" }
    },
    Content = await Html.PartialAsync("Account/_ChangeEmailContent", new ChangeEmailContentViewModel
    {
        ChapterName = viewModel.ChapterName,
        CurrentMember = viewModel.CurrentMember
    })
})