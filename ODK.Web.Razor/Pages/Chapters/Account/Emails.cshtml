@page "/{chapterName}/Account/Emails"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Account
@using ODK.Web.Razor.Models.Components
@model ODK.Web.Razor.Pages.Chapters.Account.EmailsModel
@{
    Layout = "_ChapterLayout";
    Model.Title = "Email preferences";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "Email preferences",
    Breadcrumbs = new []
    {
        new MenuItem { Link = $"/{Model.Chapter.Name}", Text = Model.Chapter.Name },
        new MenuItem { Link = $"/{Model.Chapter.Name}/Account", Text = "Profile" },
        new MenuItem { Text = "Email preferences" }
    },
    Content = await Html.PartialAsync("Account/_EmailPreferencesContent", new EmailPreferencesContentViewModel(Model.Chapter, Model.CurrentMember!))
})