@page "/{chapterName}/Account/Password/Forgotten"
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Models.Account
@using ODK.Web.Razor.Models.Login
@model ForgottenPasswordModel
@{
    Layout = "_OdkChapterLayout";
    Model.Title = "Forgotten password";

    var chapter = await Model.GetChapter();
}

@await Html.PartialAsync("Account/_LoginBody", new LoginBodyViewModel
{
    Title = "Forgotten password",
    Breadcrumbs = new[]
    {
        new MenuItem 
        { 
            Icon = IconType.ArrowLeft,
            Link = $"/{chapter.ShortName}/account/login", 
            Text = "Back to login" 
        }
    },
    Content = await Html.PartialAsync("Account/_ForgottenPasswordForm", new ForgottenPasswordFormViewModel
    {
        Chapter = chapter
    })
})