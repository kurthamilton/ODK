@page "/{chapterName}/Admin/Events/{id:guid}/Tickets"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Services
@using ODK.Services.Events
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Admin.Events
@using ODK.Web.Razor.Models.Components
@model ODK.Web.Razor.Pages.Chapters.Admin.Events.EventTicketsModel
@inject IEventAdminService EventAdminService
@{
    Layout = "Admin/Events/_EventAdminLayout";
    Model.Title = "Event tickets | Admin";

    var request = new AdminServiceRequest(Model.Chapter.Id, Model.CurrentMemberId);
    var viewModel = await EventAdminService.GetEventTicketsViewModel(request, Model.Event.Id);
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Breadcrumbs = new[]
    {
       new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Events", Text = "Events" },
       new MenuItem { Text = Model.Event.GetDisplayName() }
    },
    Content = await Html.PartialAsync("Admin/Events/_EventTicketsContent", viewModel)
})