@page "/{chapterName}/Admin/Events/Create"
@using ODK.Services.Events
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@model ODK.Web.Razor.Pages.Chapters.Admin.Events.EventCreateModel
@inject IEventAdminService EventAdminService
@{
    Layout = "Admin/Events/_EventAdminLayout";
    Model.Title = "Create event | Admin";

    var viewModel = await EventAdminService.GetEventCreateViewModel(Model.AdminServiceRequest);
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Breadcrumbs = new []
    {
        new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Events", Text = "Events" },
        new MenuItem { Text = "Create" }
    },
    Content = await Html.PartialAsync("Admin/Events/_EventCreateContent", viewModel)
})