@page "/{chapterName}/Admin/Events/Create"
@using ODK.Services.Events
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Admin
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@model ODK.Web.Razor.Pages.Chapters.Admin.Events.EventCreateModel
@inject IEventAdminService EventAdminService
@{
    Layout = "_OdkChapterAdminLayout";
    Model.Title = "Create event | Admin";

    var viewModel = await EventAdminService.GetEventCreateViewModel(Model.AdminServiceRequest);
    viewModel.VenueId = Model.VenueId;
}

@await Html.PartialAsync("Admin/_AdminBody", new AdminBodyViewModel
{
    Title = "Create event",
    Chapter = Model.Chapter,
    Breadcrumbs = new[]
    {
        new MenuItem
        {
            Link = OdkRoutes.MemberGroups.Events(Model.Platform, Model.Chapter),
            Text = "Events"
        },
        new MenuItem { Text = "New" }
    },
    ContentFunc = @<div>@await Html.PartialAsync("Admin/Events/_EventCreateContent", viewModel)</div>
})