@page "/{chapterName}/Admin/Events/{id:guid}/Invites"
@using ODK.Services
@using ODK.Services.Events
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Components
@model ODK.Web.Razor.Pages.Chapters.Admin.Events.EventInvitesModel
@inject IEventAdminService EventAdminService
@{
    Layout = "Admin/Events/_EventAdminLayout";
    Model.Title = "Event invites | Admin";

    var request = new AdminServiceRequest(Model.Chapter.Id, Model.CurrentMemberId);
    var viewModel = await EventAdminService.GetEventInvitesViewModel(request, Model.Event.Id);
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Content = await Html.PartialAsync("Admin/Events/_EventInvitesContent", viewModel)
})