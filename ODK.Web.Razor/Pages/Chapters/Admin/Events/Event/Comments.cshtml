@page "/{chapterName}/admin/events/{id:guid}/comments"
@using ODK.Services.Events
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Admin
@model CommentsModel
@inject IEventAdminService EventAdminService
@{
    Layout = "_OdkChapterAdminLayout";
    Model.Title = "Event comments | Admin";

    var request = Model.MemberChapterAdminServiceRequest;
    var viewModel = await EventAdminService.GetEventCommentsViewModel(request, Model.Event.Id);
}

@await Html.PartialAsync("Admin/_AdminBody", new AdminBodyViewModel
{
    Title = "Event comments",
    Breadcrumbs = new[]
    {
        new MenuItem
        {
            Link = Model.AdminRoutes.Events(Model.Chapter).Path,
            Text = "Back to events",
            Icon = IconType.ArrowLeft
        }
    },
    ContentFunc = @<div>@await Html.PartialAsync("Admin/Events/Event/_EventCommentsContent", viewModel)</div>
})