@page "/{chapterName}/Admin/Members/Avatars"
@using ODK.Web.Razor.Models.Admin.Members
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@model ODK.Web.Razor.Pages.Chapters.Admin.Members.MemberAvatarsModel
@{
    Layout = "Admin/Members/_MemberAdminLayout";
    Model.Title = "Member avatars | Admin";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Breadcrumbs = new[]
    {
        new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Members", Text = "Members" },
        new MenuItem { Text = "Avatars" }
    },
    Content = await Html.PartialAsync("Admin/Members/_MemberAvatarsContent", Model.Chapter)
})

@section styles
{
    <link rel="stylesheet" href="/lib/cropperjs/cropper.css" />
}

@section scripts
{
    <script src="/lib/cropperjs/cropper.js"></script>
    <script src="/js/odk.imaging.js"></script>
}