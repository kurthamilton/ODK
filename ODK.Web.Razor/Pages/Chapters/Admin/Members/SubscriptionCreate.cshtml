@page "/{chapterName}/Admin/Members/Subscriptions/Create"
@using ODK.Services
@using ODK.Services.Members
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Admin
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@model SubscriptionCreateModel
@inject IMemberAdminService MemberAdminService
@{
    Layout = "_OdkChapterAdminLayout";
    Model.Title = "Create subscription | Admin";

    var request = Model.MemberChapterServiceRequest;
    var viewModel = await MemberAdminService.GetMemberSubscriptionCreateViewModel(request);
}

@await Html.PartialAsync("Admin/_AdminBody", new AdminBodyViewModel
{
    Title = "Create subscription",
    Breadcrumbs = new[]
    {
        new MenuItem
        {
            Link = Model.OdkRoutes.GroupAdmin.MembersSubscriptions(Model.Chapter),
            Text = "Back to subscriptions",
            Icon = IconType.ArrowLeft
        }
    },
    ContentFunc = @<div>@await Html.PartialAsync("Admin/Members/_ChapterSubscriptionCreateContent", viewModel)</div>
})