@page "/{chapterName}/Admin/Members/Subscriptions/Create"
@using ODK.Services
@using ODK.Services.Members
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@model ODK.Web.Razor.Pages.Chapters.Admin.Members.SubscriptionCreateModel
@inject IMemberAdminService MemberAdminService
@{
    Layout = "Admin/Members/_MemberAdminLayout";
    Model.Title = "Create subscription | Admin";

    var request = new AdminServiceRequest(Model.Chapter.Id, Model.CurrentMemberId);
    var viewModel = await MemberAdminService.GetMemberSubscriptionCreateViewModel(request);
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Content = await Html.PartialAsync("Admin/Members/_SubscriptionCreateContent", viewModel)
})