@page "/{chapterName}/Admin/Members/{id:guid}/SendEmail"
@using ODK.Web.Razor.Models.Admin.Members
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@model ODK.Web.Razor.Pages.Chapters.Admin.Members.SendMemberEmailModel
@{
    Layout = "Admin/Members/_MemberAdminLayout";
    Model.Title = "Send member email | Admin";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Breadcrumbs = new []
    {
        new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Members", Text = "Members" },
        new MenuItem { Text = Model.Member.GetDisplayName(Model.Chapter.Id) }
    },
    Content = await Html.PartialAsync("Admin/Members/_SendMemberEmailContent",
        new MemberViewModel(Model.Chapter, Model.CurrentMember, Model.Member))
})