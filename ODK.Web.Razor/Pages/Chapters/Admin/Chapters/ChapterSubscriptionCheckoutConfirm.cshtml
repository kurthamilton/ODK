@page "/{chapterName}/admin/chapter/subscription/{id:guid}/confirm"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ODK.Core.Payments
@using ODK.Web.Common.Components
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Account
@using ODK.Web.Razor.Models.Admin
@using ODK.Web.Razor.Models.Components
@model ChapterSubscriptionCheckoutConfirmModel
@{
    Layout = "_OdkChapterAdminLayout";
    Model.Title = "Subscription pending confirmation";

    var subscriptionUrl = Model.RedirectUrl;
    var chapter = await Model.GetChapter();
}

@await Html.PartialAsync("Admin/_AdminBody", new AdminBodyViewModel
{
    Title = "Checkout",
    Breadcrumbs = new[]
    {
        new MenuItem { Text = "Subscription", Link = subscriptionUrl },
        new MenuItem { Text = "Checkout" }
    },
    ContentFunc = 
        @<div>
            <section class="section">
                <div data-odk-checkout
                     data-odk-polling-url="/groups/@chapter.Id/payments/sessions/@Model.SessionId/status">

                    <div data-odk-checkout-status="@PaymentStatusType.Complete"
                         data-odk-checkout-action="reload">
                    </div>

                    <div data-odk-checkout-status="@PaymentStatusType.Pending">
                        <div class="alert alert-warning">
                            We are just waiting for confirmation of your payment...
                        </div>
                        <div>
                            <a href="@subscriptionUrl">
                                Go back to chapter subscription
                            </a>
                        </div>
                    </div>

                    <div data-odk-checkout-status="@PaymentStatusType.Expired"
                         data-odk-checkout-action="reload">
                    </div>
                </div>
            </section>
        </div>
})

@section scripts 
{
    <script src="~/js/odk.polling.js" asp-append-version="true"></script>
    <script src="~/js/odk.checkout.js" asp-append-version="true"></script>
}