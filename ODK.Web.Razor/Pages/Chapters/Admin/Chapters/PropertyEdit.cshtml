@page "/{chapterName}/Admin/Chapter/Properties/{id:guid}"
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@model ODK.Web.Razor.Pages.Chapters.Admin.Chapters.PropertyEditModel
@{
    Layout = "Admin/Chapters/_ChapterAdminLayout";
    Model.Title = "Edit property | Admin";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Breadcrumbs = new []
    {
        new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Chapter/Properties", Text = "Properties" },
        new MenuItem { Text = "Edit" }
    },
    Content = await Html.PartialAsync("Admin/Chapter/_PropertyEditContent", Model.Property)
})