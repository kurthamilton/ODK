@page "/{chapterName}/Admin/Chapter/Properties/Create"
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@model ODK.Web.Razor.Pages.Chapters.Admin.Chapters.PropertyCreateModel
@{
    Layout = "Admin/Chapters/_ChapterAdminLayout";
    Model.Title = "Create property | Admin";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Breadcrumbs = new []
    {
        new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Chapter/Properties", Text = "Properties" },
        new MenuItem { Text = "Create property" }
    },
    Content = await Html.PartialAsync("Admin/Chapter/_PropertyCreateContent", Model.Chapter)
})