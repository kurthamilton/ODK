@page "/{chapterName}/Admin/Chapter/Messages/{id:guid}"
@using ODK.Services.Chapters
@using ODK.Web.Common.Components
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Admin
@using ODK.Web.Razor.Models.Components
@model MessageModel
@inject IChapterAdminService ChapterAdminService
@{
    Layout = "_OdkChapterAdminLayout";
    Model.Title = "Message | Admin";

    var request = await Model.CreateMemberChapterServiceRequest();
    var viewModel = await ChapterAdminService.GetChapterMessageViewModel(request, Model.MessageId);
}

@await Html.PartialAsync("Admin/_AdminBody", new AdminBodyViewModel
{
    Title = "Message",
    Breadcrumbs = new[]
    {
        new MenuItem
        {
            Link = OdkRoutes.MemberGroups.GroupMessages(Model.Platform, viewModel.Chapter),
            Text = "Back to messages",
            Icon = IconType.ArrowLeft
        }
    },
    ContentFunc = @<div>@await Html.PartialAsync("Admin/Chapter/_MessageContent", viewModel)</div>
})