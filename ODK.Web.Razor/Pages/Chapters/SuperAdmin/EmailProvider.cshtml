@page "/{chapterName}/Admin/SuperAdmin/EmailProviders/{id:guid}"
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@model ODK.Web.Razor.Pages.Chapters.SuperAdmin.EmailProviderModel
@{
    Layout = "SuperAdmin/_SuperAdminLayout";
    Model.Title = "Edit email provider | SuperAdmin";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Breadcrumbs = new []
    {
        new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/SuperAdmin/EmailProviders", Text = "Email providers" },
        new MenuItem { Text = Model.Provider?.SmtpServer ?? "SMTP" }
    },
    Content = await Html.PartialAsync("SuperAdmin/_EmailProviderContent", Model.Provider)
})