@page "/{chapterName}/Events/Public/{id:guid}"
@using ODK.Core.Venues
@using ODK.Services.Events
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Models.Events
@model ODK.Web.Razor.Pages.Chapters.Events.PublicEventModel
@inject IEventService EventService
@{
    Layout = "_ChapterLayout";
    Model.Title = Model.Event.GetDisplayName();

    var dto = await EventService.GetEventDto(Model.CurrentMember, Model.Event);
}

@await Html.PartialAsync("Components/_BodyWithSidebar", new BodyWithSidebarViewModel
{
    Title = Model.Event.GetDisplayName(),
    Breadcrumbs = new []
    {
        new MenuItem { Link = $"/{Model.Chapter.Name}", Text = Model.Chapter.Name },
        new MenuItem { Link = $"/{Model.Chapter.Name}/Events", Text = "Events" },
        new MenuItem { Text = Model.Event.GetDisplayName() }
    },
    Content = await Html.PartialAsync("Events/_EventContent", new EventContentViewModel(Model.CurrentMember, Model.Chapter, Model.Event, dto.Venue, dto.Comments)),
    SidebarContent = await Html.PartialAsync("Events/_EventSidebar", new EventSidebarViewModel(Model.Chapter, Model.Event, Model.CurrentMember, dto.Hosts))
})