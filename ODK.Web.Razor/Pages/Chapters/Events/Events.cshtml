@page "/{chapterName}/Events"
@using ODK.Core
@using ODK.Services.Events
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@model EventsModel
@inject IEventViewModelService EventViewModelService
@{
    Layout = "_OdkChapterLayout";
    Model.Title = "Events";

    var viewModel = await EventViewModelService.GetEventsPage(Model.ChapterServiceRequest);

    Model.Path = Model.OdkRoutes.Groups.Events(Model.Chapter);
}

@if (!viewModel.Chapter.IsOpenForRegistration())
{
    @await Html.PartialAsync("Components/_Body", new BodyViewModel
    {
        Title = viewModel.Chapter.FullName,
        Content = await Html.PartialAsync("Groups/_GroupRegistrationClosed", viewModel.Chapter)
    })

    return;
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = "Events",
    Breadcrumbs = new []
    {
        new MenuItem 
        { 
            Link = Model.OdkRoutes.Groups.Group(Model.Chapter),
            Text = viewModel.Chapter.GetDisplayName(Model.Platform)
        },
        new MenuItem { Text = "Events" }
    },
    Content = await Html.PartialAsync("Events/_EventsContent", viewModel)
})