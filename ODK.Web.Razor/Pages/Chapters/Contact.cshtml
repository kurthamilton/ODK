@page "/{chapterName}/Contact"
@using ODK.Core
@using ODK.Core.Exceptions
@using ODK.Core.Pages
@using ODK.Core.Utils
@using ODK.Services.Chapters
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Contact
@using ODK.Core.Settings
@model ContactModel
@inject IChapterViewModelService ChapterViewModelService
@{
    Layout = "_OdkChapterLayout";    
    Model.Description = "Form for sending messages to the owners of this Drunken Knitwits chapter";    

    var chapter = await Model.GetChapter();
    var viewModel = await ChapterViewModelService.GetGroupContactPage(
        Model.ServiceRequest, Model.CurrentMemberIdOrDefault, chapter);

    var chapterPage = viewModel.ChapterPages.FirstOrDefault(x => x.PageType == PageType.Contact);
    if (chapterPage?.Hidden == true)
    {
        throw new OdkNotFoundException();
    }

    var title = StringUtils.Coalesce(chapterPage?.Title, "Contact");
    
    Model.Title = title;
    Model.Path = OdkRoutes.Groups.Contact(Model.Platform, viewModel.Chapter);
}

@if (!viewModel.Chapter.IsOpenForRegistration())
{
    @await Html.PartialAsync("Components/_Body", new BodyViewModel
    {
        Title = viewModel.Chapter.FullName,
        Content = await Html.PartialAsync("Groups/_GroupRegistrationClosed", viewModel.Chapter)
    })

    return;
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Title = title,
    Breadcrumbs = new []
    {
        new MenuItem 
        { 
            Link = OdkRoutes.Groups.Group(Model.Platform, chapter),
            Text = chapter.GetDisplayName(Model.Platform)
        },
        new MenuItem { Text = title }
    },
    Content = await Html.PartialAsync("Groups/_GroupContactContent", viewModel)
})

@section scripts
{
    @await Html.PartialAsync("Components/Scripts/_Recaptcha")
}