@using ODK.Core.Platforms
@using ODK.Web.Common.Components
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Admin.Members
@model MemberAdminTabsViewModel
@{
    var menuItems = new List<MenuItem>
    {
        new MenuItem { Link = OdkRoutes.MemberGroups.Member(Model.Platform, Model.Chapter, Model.Member.Id), Text = "Subscription" },
        new MenuItem { Link = OdkRoutes.MemberGroups.MemberEvents(Model.Platform, Model.Chapter, Model.Member.Id), Text = "Events" },
        new MenuItem { Link = OdkRoutes.MemberGroups.MemberConversations(Model.Platform, Model.Chapter, Model.Member.Id), Text = "Conversations" }
    };

    if (Model.Platform == PlatformType.DrunkenKnitwits)
    {
        menuItems.Add(new MenuItem { Link = OdkRoutes.MemberGroups.MemberImage(Model.Platform, Model.Chapter, Model.Member.Id), Text = "Image" });
    }
}

@await Html.PartialAsync("Components/_Tabs", menuItems)