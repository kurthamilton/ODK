@using ODK.Services.Chapters.ViewModels
@using ODK.Web.Common.Components
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@model ChapterConversationsAdminPageViewModel
@inject IOdkRoutes OdkRoutes
@{
    var menuItems = new[]
    {
        new MenuItem { Link = OdkRoutes.GroupAdmin.GroupConversations(Model.Chapter), Text = "Unread" },
        new MenuItem { Link = OdkRoutes.GroupAdmin.GroupConversationsRead(Model.Chapter), Text = "Read" }
    };
}

@await Html.PartialAsync("Components/_Tabs", new TabsViewModel
{
    MenuItems = menuItems
})