@using ODK.Services.Chapters.ViewModels
@using ODK.Web.Common.Components
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@model ChapterConversationsAdminPageViewModel
@inject IOdkRoutes OdkRoutes
@{
    var menuItems = new[]
    {
        new MenuItem { Link = OdkRoutes.GroupAdmin.Conversations(Model.Chapter).Path, Text = "Unread" },
        new MenuItem { Link = OdkRoutes.GroupAdmin.ConversationsRead(Model.Chapter).Path, Text = "Read" }
    };
}

@await Html.PartialAsync("Components/_Tabs", new TabsViewModel
{
    MenuItems = menuItems
})