@using ODK.Services.Chapters.ViewModels
@using ODK.Web.Common.Components
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@model ChapterMessagesAdminPageViewModel
@inject IOdkRoutes OdkRoutes

@await Html.PartialAsync("Components/_Tabs", new TabsViewModel
{
    MenuItems = new[]
    {
        new MenuItem
        {
            Active = !Model.IsSpam,
            Link = OdkRoutes.GroupAdmin.GroupMessages(Model.Chapter),
            Text = $"Messages ({Model.MessageCount})"
        },
        new MenuItem
        {
            Active = Model.IsSpam,
            Link = OdkRoutes.GroupAdmin.GroupMessagesSpam(Model.Chapter),
            Text = $"Spam ({Model.SpamMessageCount})"
        }
    }
})