@using ODK.Core.Events
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Models.Events
@model ListEventViewModel
@inject IOdkRoutes OdkRoutes

<div class="d-flex">
    <div class="me-auto">
        @await Html.PartialAsync("Events/_EventResponseIcon", new EventResponseIconViewModel
        {
            ReadOnly = true,
            CurrentResponse = Model.Event.Response
        })

        <a href="@OdkRoutes.Groups.Event(Model.Chapter, Model.Event.EventShortcode)"
           class="@(Model.Event.Response != EventResponseType.None ? "ms-1" : null)">
            @Model.Event.EventName
        </a>
    </div>
    @if (Model.Event.Ticketed)
    {
        <div data-bs-toggle="tooltip" data-bs-title="Ticketed">
            @await Html.PartialAsync("Components/_Icon", new IconViewModel(IconType.Ticket))
        </div>
    }
</div>