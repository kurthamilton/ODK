@using ODK.Web.Razor.Models.SiteAdmin
@model TopicFormViewModel
@{
    var topicGroupOptions = Model.TopicGroups
        .Select(x => new SelectListItem
        {
            Value = x.Id.ToString(),
            Text = x.Name
        })
        .OrderBy(x => x.Text)
        .ToArray();
}

<div class="form-group mb-3 required">
    @Html.LabelFor(x => x.TopicGroupId, new { @class = "form-label" })
    @Html.DropDownListFor(x => x.TopicGroupId, topicGroupOptions, new { @class = "form-control", data_select = "" })
    @Html.ValidationMessageFor(x => x.TopicGroupId)
</div>