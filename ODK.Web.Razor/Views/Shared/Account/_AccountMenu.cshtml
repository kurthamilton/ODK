@using ODK.Core.Platforms
@using ODK.Web.Common.Components
@using ODK.Web.Common.Routes
@using ODK.Web.Common.Services
@using ODK.Web.Razor.Models.Account
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Razor.Services
@model AccountMenuViewModel
@inject IOdkRoutes OdkRoutes
@inject IRequestStore RequestStore
@{
    var platform = RequestStore.Platform;
    var chapter = RequestStore.ChapterOrDefault;

    var menuItems = new MenuItem[]
    {
        new MenuItem 
        { 
            Link = OdkRoutes.Account.PersonalDetails(), 
            Text = "Personal details", 
            Children = new[]
            {
                platform == PlatformType.DrunkenKnitwits
                    ? new MenuItem { Link = OdkRoutes.Account.EmailAddressChange(chapter), Text = "Email address" }
                    : new MenuItem(),
                platform == PlatformType.DrunkenKnitwits
                    ? new MenuItem { Link = OdkRoutes.Account.Picture(chapter), Text = "Profile picture" }
                    : new MenuItem()
            }
        },
        platform == PlatformType.Default 
            ? new MenuItem { Link = OdkRoutes.Account.Location(), Text = "Location" }
            : new MenuItem(),
        Model.Chapter != null
            ? new MenuItem { Link = OdkRoutes.Account.Profile(chapter), Text = "Profile" }
            : new MenuItem(),
        new MenuItem { Link = OdkRoutes.Account.Conversations(chapter), Text = "My conversations" },
        platform == PlatformType.DrunkenKnitwits
            ? new MenuItem()
            : new MenuItem { Link = OdkRoutes.Account.Groups(), Text = "My groups" },
        Model.Chapter == null
            ? new MenuItem { Link = OdkRoutes.Account.Interests(), Text = "My interests" }
            : new MenuItem(),
        new MenuItem { Link = OdkRoutes.Account.Subscription(chapter), Text = "My subscription" },
        new MenuItem { Link = OdkRoutes.Account.Payments(chapter), Text = "My payments" },
        new MenuItem { Link = OdkRoutes.Account.PasswordChange(chapter), Text = "Password" },
        platform == PlatformType.DrunkenKnitwits
            ? new MenuItem { Link = OdkRoutes.Account.EmailPreferences(chapter), Text = "Email preferences" }
            : new MenuItem(),
        new MenuItem { Link = OdkRoutes.Account.Notifications(chapter), Text = "Notifications" },
        platform == PlatformType.DrunkenKnitwits
            ? new MenuItem()
            : new MenuItem { Link = OdkRoutes.Account.Issues(), Text = "Issues" },
        new MenuItem { Link = OdkRoutes.Account.Delete(chapter), Text = "Delete account" }
    }.Where(x => !string.IsNullOrEmpty(x.Link)).ToArray();

    var activeMenuItem = menuItems
        .FirstOrDefault(x => string.Equals(x.Link, Model.Active, StringComparison.InvariantCultureIgnoreCase));
}

<div data-odk-component="_AccountMenu">
    @await Html.PartialAsync("Components/_SideMenu", new SideMenuViewModel
    {
        Active = activeMenuItem,
        MenuItems = menuItems,
        Root = true
    })
</div>