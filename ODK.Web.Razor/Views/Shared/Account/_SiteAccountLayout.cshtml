@using Microsoft.AspNetCore.Html
@using ODK.Web.Razor.Models.Account
@using ODK.Web.Razor.Models.Components
@model SiteAccountLayoutViewModel

<div data-odk-component="_SiteAccountLayout">
    @await Html.PartialAsync("Components/_TwoColLeftMenu", new TwoColLeftMenuViewModel
    {
        Title = Model.Title,
        BodyContentFunc = Model.Content,
        MenuContentFunc = _ => Html.PartialAsync("Account/_AccountMenu", new AccountMenuViewModel
        {
            Active = Model.Active,
            Chapter = Model.Chapter            
        })
    })    
</div>