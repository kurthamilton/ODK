@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Chapters
@using ODK.Web.Razor.Models.Components
@model ManageChapterLinkViewModel
@inject IOdkRoutes OdkRoutes
@{
    var classes = new List<string>();

    if (!string.IsNullOrEmpty(Model.Class))
    {
        classes.Add(Model.Class);
    }

    if (!string.IsNullOrEmpty(Model.Justify))
    {
        classes.Add($"justify-content-{Model.Justify.ToLowerInvariant()}");
    }
}

<div data-odk-component="_ManageChapterLink">
    <a class="text-body-secondary link-hover d-flex gap-1 align-items-center @string.Join(' ', classes)" 
        href="@OdkRoutes.GroupAdmin.Group(Model.Chapter).Path">
        @await Html.PartialAsync("Components/_Icon", new IconViewModel(IconType.Settings))
        <span class="link-hover__underline">Manage</span>
    </a>
</div>