@using ODK.Web.Razor.Models.Chapters
@using ODK.Web.Razor.Razor
@model CreateChapterFormViewModel
@{
    var countryOptions = Model
        .Countries
        .OrderBy(x => x.Name)
        .Select(x => new SelectListItem { Value = x.Id.ToString(), Text = x.Name })
        .ToArray();

    var timeZoneOptions = TimeZoneInfo
        .GetSystemTimeZones()
        .Select(x => new SelectListItem { Value = x.Id, Text = x.DisplayName });
}

<div class="form-group mb-3 required">
    @Html.LabelFor(x => x.Name, new { @class = "form-label" })
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name)
</div>

<div class="form-group mb-3 required">
    @Html.LabelFor(x => x.Description, new { @class = "form-label" })
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Description)
</div>

<div class="form-group mb-3 required">
    @Html.LabelFor(x => x.CountryId, new { @class = "form-label" })
    @Html.DropDownListFor(x => x.CountryId, countryOptions, "", new { @class = "form-select" })
    @Html.ValidationMessageFor(x => x.CountryId)
</div>

<div class="form-group mb-3">
    @Html.LabelFor(x => x.TimeZoneId, new { @class = "form-label" })
    @Html.OdkTimeZoneDropDownFor(x => x.TimeZoneId, "", new { @class = "form-select" })
    @Html.ValidationMessageFor(x => x.TimeZoneId)
</div>