@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Chapters
@model ChapterTileViewModel

<div class="card">
    <div class="card-header">
        <a href="@OdkRoutes2.Groups.Group(Model.Chapter.Slug)">@Model.Chapter.Name</a>
    </div>
    <div class="card-body">        
        <p class="card-text">@Model.Chapter.Description</p>
    </div>
    @if (Model.IsOwner || Model.IsAdmin)
    {
        <div class="card-footer text-body-secondary">
            <a href="@OdkRoutes2.MemberGroups.Group(Model.Chapter.Id)">
                <i class="fa-solid fa-gear"></i> Manage
            </a>
        </div>
    }    
</div>