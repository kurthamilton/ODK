@using ODK.Core.Chapters
@using ODK.Core.Members
@using ODK.Core.SocialMedia
@using ODK.Services.Chapters
@using ODK.Services.Members
@using ODK.Services.SocialMedia
@using ODK.Web.Razor.Models.Members
@using ODK.Web.Razor.Models.SocialMedia
@model ODK.Web.Razor.Models.Chapters.ChapterContentViewModel
@inject IChapterService ChapterService
@inject IMemberService MemberService
@inject IInstagramService InstagramService
@{
    var dto = await InstagramService.GetInstagramPosts(Model.Chapter.Id, 8);    
    var (links, posts) = (dto.Links, dto.Posts);
}

@if (Model.Member?.IsMemberOf(Model.Chapter.Id) != true)
{
    var texts = await ChapterService.GetChapterTexts(Model.Chapter.Id);

    <h3>Welcome!</h3>
    @if (!string.IsNullOrEmpty(texts.WelcomeText))
    {
        @Html.Raw(texts.WelcomeText)
    }
}
else
{
    var latestMembers = await MemberService.GetLatestMembers(Model.Member, Model.Chapter.Id);

    var memberListViewModel = new MemberListViewModel(Model.Chapter, latestMembers.Select(x => new ListMemberViewModel(Model.Chapter, x)))
    {
        Cols = 2
    };

    <h3>Latest members</h3>
    
    @await Html.PartialAsync("Members/_MemberList", memberListViewModel)
}
                
@if (posts.Count > 0)
{
    <div class="mt-3">
        <h3>Latest from Instagram</h3>
        <div class="row row-cols-2 row-cols-lg-4 g-0">
            @foreach (InstagramPost post in posts)
            {
                <div class="col">
                    @await Html.PartialAsync("Components/_InstagramPost", 
                        new InstagramPostViewModel(Model.Chapter, post.Id, post.Caption, post.ExternalId))
                </div>
            }
        </div>

        <div class="d-flex justify-content-end align-content-center">
            <div>
                <i class="fab fa-instagram mr-1"></i>
                <a href="https://www.instagram.com/@links.InstagramName" target="_blank">
                    @links.InstagramName
                </a>
            </div>
        </div>
    </div>
}