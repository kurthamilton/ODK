@using ODK.Services.Authentication
@using ODK.Web.Razor.Models.Components
@model AdminBarViewModel

@if (Model.CurrentMember?.MemberChapter(Model.Chapter.Id) == null &&
    Model.CurrentMember?.SiteAdmin != true)
{
    return;    
}

<div class="mb-3 button-container">
    <a href="@Model.AdminLink" class="btn btn-outline-secondary">
        @if (Model.AdminLinkText == "Edit")
        {
            @await Html.PartialAsync("Components/_Icon", new IconViewModel(IconType.Edit))
        }
        
        @Model.AdminLinkText
    </a>

    @if (Model.Toolbar != null)
    {
        @Model.Toolbar.Invoke(null)
    }
</div>