@using ODK.Core.Chapters
@using ODK.Services.Chapters
@using ODK.Web.Common.Extensions
@using ODK.Web.Razor.Models.SuperAdmin
@model ODK.Core.Chapters.Chapter
@inject IChapterAdminService ChapterAdminService
@{
    var memberId = User.MemberId();
    var adminMembers = await ChapterAdminService.GetChapterAdminMemberDtos(memberId, Model.Id);
}

<h2>Members</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Owner</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in adminMembers.Members.OrderBy(x => x.FullName))
        {
            <tr>
                <td>@member.FullName</td>
                <td>
                    @if (Model.OwnerId == member.Id)
                    {
                        <i class="fa-solid fa-star text-warning"></i>
                    }
                    else
                    {
                        <form action="/@Model.Name/Admin/Chapter/Owner" method="post">
                            @Html.Hidden("memberId", member.Id)
                            <button class="btn btn-icon" data-bs-toggle="tooltip" data-bs-title="Set as owner">
                                <i class="fa-regular fa-star text-warning"></i>
                            </button>
                        </form>                        
                    }
                </td>
            </tr>
        }
    </tbody>
</table>