@using ODK.Core.Logging
@using ODK.Services.Logging
@using ODK.Web.Common.Extensions
@model ODK.Core.Chapters.Chapter
@inject ILoggingService LoggingService
@{
    var memberId = User.MemberId();
    var errors = await LoggingService.GetErrors(memberId, 1, 1000);
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Time</th>
            <th>Type</th>
            <th>Message</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var error in errors)
        {
            <tr>
                <td>@error.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@error.ExceptionType</td>
                <td>
                    <a href="/@Model.Name/Admin/SuperAdmin/Errors/@error.Id">@error.ExceptionMessage</a>
                </td>
                <td>
                    <form method="post" action="/@Model.Name/Admin/SuperAdmin/Errors/@error.Id/Delete">
                        @Html.AntiForgeryToken()
                        <button data-bs-toggle="tooltip" data-bs-title="Delete" class="btn-icon text-danger">
                            <i class="fas fa-times"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>