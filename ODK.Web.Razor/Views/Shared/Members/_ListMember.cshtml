@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Members
@model ODK.Web.Razor.Models.Members.ListMemberViewModel

<div class="card member-tile @(Model.HideName ? "member-tile-sm" : null)">
    <a href="@OdkRoutes2.Groups.Member(Model.Platform, Model.Chapter, Model.Member.Id)" 
       data-bs-toggle="@(Model.HideName ? "tooltip" : "")" data-bs-title="@(Model.HideName ? Model.Member.FullName : "")" container="body">

        <div class="d-flex align-items-end justify-content-center">
           @await Html.PartialAsync("Members/_MemberAvatar", new MemberAvatarViewModel
            {
                Member = Model.Member,
                IsTop = !Model.HideName,
                MaxWidth = Model.MaxWidth
            })
        </div>
            
        @if (!Model.HideName)
        {
            <div>@Model.Member.FullName</div>
        }
    </a>
</div>