@using ODK.Core.Images
@using ODK.Web.Common.Routes
@using ODK.Web.Razor.Models.Members
@model MemberImageViewModel
@inject IOdkRoutes OdkRoutes
@{
    var imageUrl = Model.HasImage != null 
        ? Model.Image != null ? ImageHelper.ToDataUrl(Model.Image.ImageData, Model.Image.MimeType) : ""
        : OdkRoutes.Members.Image(Model.Member.Id);    
}

<img class="@(Model.IsTop ? "card-img-top" : "card-img") @(imageUrl == "" ? "d-none" : "")"
     src="@imageUrl"
     alt="Photo of @Model.Member.FullName"
     data-img-naturalsize />
