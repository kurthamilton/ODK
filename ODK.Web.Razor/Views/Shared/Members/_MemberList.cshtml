@using ODK.Web.Razor.Models.Members
@model MemberListViewModel
@{
    if (Model.Members.Count == 0)
    {
        return;
    }
}

<div class="row g-0 
            @(Model.Cols == 6 ? "row-cols-6" : null)
            @(Model.Cols == 4 ? "row-cols-4" : null)
            @(Model.Cols == 3 ? "row-cols-md-6 row-cols-3" : null)
            @(Model.Cols == 2 ? "row-cols-lg-4 row-cols-2" : null)">
    @foreach (var member in Model.Members)
    {
        <div class="@(Model.Cols > 0 ? "col" : null)">
            @await Html.PartialAsync("Members/_ListMember", new ListMemberViewModel
            {
                AvatarVersion = member.AvatarVersion,
                Chapter = Model.Chapter,
                MaxWidth = Model.MaxWidth,
                Member = member.Member,
                Platform = Model.Platform,
                Size = Model.Size                
            })
        </div>
    }
</div>