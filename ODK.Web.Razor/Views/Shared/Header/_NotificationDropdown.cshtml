@using ODK.Core.Notifications
@using ODK.Services.Notifications
@using ODK.Services.Notifications.ViewModels
@using ODK.Web.Common.Services
@using ODK.Web.Razor.Services
@inject INotificationService NotificationService
@inject IRequestStore RequestStore
@{
    var memberId = RequestStore.CurrentMemberIdOrDefault;
    if (memberId == null)
    {
        return;
    }

    var viewModel = await NotificationService.GetUnreadNotificationsViewModel(RequestStore.MemberServiceRequest);
}

@*Only show notifications to users who have seen them before*@
@if (viewModel.TotalCount > 0)
{
    @await Html.PartialAsync("Notifications/_NotificationList", viewModel)
}