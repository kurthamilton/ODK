@using ODK.Core.Platforms
@using ODK.Web.Razor.Models
@using ODK.Web.Razor.Models.Footer
@model OdkComponentContext

@if (Model.Platform == PlatformType.DrunkenKnitwits)
{
    @await Html.PartialAsync("Footer/_OdkFooter", new FooterViewModel(Model)
    {
        Chapter = null
    })
}
else
{
    @await Html.PartialAsync("Footer/_SiteFooter", new FooterViewModel(Model)
    {
        Chapter = null
    })
}