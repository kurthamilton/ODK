@using ODK.Core.Platforms
@using ODK.Web.Common.Services
@using ODK.Web.Razor.Models
@using ODK.Web.Razor.Models.Footer
@inject IRequestStore RequestStore

@if (RequestStore.Platform == PlatformType.DrunkenKnitwits)
{
    @await Html.PartialAsync("Footer/_OdkFooter", new FooterViewModel())
}
else
{
    @await Html.PartialAsync("Footer/_SiteFooter", new FooterViewModel())
}