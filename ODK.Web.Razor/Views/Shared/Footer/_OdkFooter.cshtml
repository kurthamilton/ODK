@using ODK.Services.Chapters
@using ODK.Web.Razor.Models.Components
@model ODK.Web.Razor.Models.Footer.FooterViewModel
@inject IChapterService ChapterService
@{
    var links = Model.Chapter != null ? await ChapterService.GetChapterLinks(Model.Chapter.Id) : null;
}

<footer>
    <section class="section--footer">
        <div class="container">
            <div class="row row-cols-1 row-cols-md-2">
                <div class="col container">
                    <div>
                        <a href="/">Knitwits International Home</a>
                    </div>
                    <div>
                        <a href="/Privacy">Privacy</a>
                    </div>
                </div>
                <div class="col">
                    @await Html.PartialAsync("Components/_SocialMediaLinks", new SocialMediaLinksViewModel
                    {
                        Facebook = links?.FacebookName,
                        Instagram = links?.InstagramName,
                        ShowNames = true,
                        Twitter = links?.TwitterName
                    })
                </div>
            </div>
        </div>
    </section>
</footer>