{
  "AppSettings": {
    "Cors": {
      "AllowedMethods": "GET,POST,PUT,PATCH,DELETE,OPTIONS",
      "AllowedHeaders": "*"
    },
    "Members": {
      "MaxImageSize": 250 /* maximum height or width */
    },
    "Urls": {
      "ActivateAccount": "/{chapter.name}/account/activate?token={token}",
      "ApiEmailRead":  "/Emails/{email.id}/Read",
      "Event": "/{chapter.name}/events/{event.id}",
      "EventRsvp": "/{chapter.name}/events/{event.id}?token={token}",
      "PasswordReset": "/{chapter.name}/password/reset?token={token}"
    }
  },
  "Logging": {
    "Path": ".\\Logs",
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}