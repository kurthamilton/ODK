@page "/{chapterName}/Admin/Events/{id:guid}/Invites"
@using ODK.Web.Razor.Models.Components
@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Admin.Events
@model ODK.Web.Razor.Pages.Chapters.Admin.Events.EventInvitesModel
@{
    Layout = "Admin/Events/_EventAdminLayout";
    Model.Title = "Event Invites | Admin";
}

@await Html.PartialAsync("Components/_Body", new BodyViewModel
{
    Breadcrumbs = new []
    {
       new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Events", Text = "Events" },
       new MenuItem { Text = Model.Event.Name }
    },
    Content = await Html.PartialAsync("Admin/Events/_EventInvitesContent", 
       new EventViewModel(Model.Chapter, Model.CurrentMember, Model.Event))
})