@using ODK.Web.Common.Components
@using ODK.Web.Razor.Models.Header
@model ODK.Web.Razor.Models.Header.AdminHeaderViewModel

@await Html.PartialAsync("Header/_Navbar", new NavbarViewModel
{
    Chapter = Model.Chapter,
    Breakpoint = "sm",
    Member = Model.CurrentMember,
    MenuItems = new []
    {
        new []
        {
            new MenuItem { Link = $"/{Model.Chapter.Name}", Icon = "fas fa-home", Text = "" },
            new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Chapter/Text", Text = Model.Chapter.Name },
            new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Events", Text = "Events" },
            new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Members", Text = "Members" },
            new MenuItem { Link = $"/{Model.Chapter.Name}/Admin/Media", Text = "Media" }
        }
    }
})